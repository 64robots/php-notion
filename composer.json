{
    "name": "64robots/php-notion",
    "description": "Package to use Notion API from PHP",
    "keywords": [
        "64robots",
        "php_notion",
        "notion"
    ],
    "homepage": "https://github.com/64robots/php-notion",
    "license": "MIT",
    "authors": [
        {
            "name": "64 Robots",
            "email": "miguel@64robots.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "R64\\PhpNotion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "R64\\PhpNotion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
